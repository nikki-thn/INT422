@model Web_app_project_template_v11.Controllers.PlaylistEditTracksForm

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PlaylistEditTracksForm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlaylistId)

        <div class="form-group">
            <input type="submit" value="Save changes" class="btn btn-default" />&nbsp;&nbsp;
            | @Html.ActionLink("Back to Details", "Details", new { id = Model.PlaylistId })
            | @Html.ActionLink("Back to List", "Index")
        </div>
        <hr />

        <div class="row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-7" })
            <div class="col-md-6">
                @foreach (var track in Model.TracksOnPlaylist)
                {
                    <input type="checkbox" name="TracksIds" value="@track.TrackId" checked="@track." />
                    @track.NameShort
                    <br />
                }
            </div>

            <div class="col-md-6 bg-info">
                <h4>Now on playlist <span class="badge">@Model.TracksCount </span></h4>
                <br />
                @foreach (var track in Model.TracksOnPlaylist)
                {
                    @track.NameFull;
                    <br />
                }
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
